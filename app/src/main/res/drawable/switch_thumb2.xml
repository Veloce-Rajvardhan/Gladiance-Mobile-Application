<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">

        <shape android:shape="rectangle">
            <!--            <solid android:color="#494949" />-->
            <solid android:color="#9c9797" />
            <!-- White background when checked/on -->
            <corners android:radius="10dp" /> <!-- Adjust the radius based on your preference -->
            <size android:width="70dp" android:height="40dp" />
            <!-- Adjust the size based on your preference -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#9c9797" /> <!-- Transparent white background when unchecked/off -->
            <!--            <solid android:color="#494949" /> &lt;!&ndash; Transparent white background when unchecked/off &ndash;&gt;-->
            <corners android:radius="10dp" /> <!-- Adjust the radius based on your preference -->
            <size android:width="70dp" android:height="40dp" /> <!-- Adjust the size based on your preference -->
        </shape>
    </item>
</selector>