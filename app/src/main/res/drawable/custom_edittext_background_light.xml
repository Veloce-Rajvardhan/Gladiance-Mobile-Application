<!-- res/drawable/custom_edittext_bg.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_enabled="true" android:state_focused="false">
        <shape>
            <solid android:color="#FFFF" /> <!-- Background color when not focused -->
            <stroke android:width="1dp"
                android:color="#000"
                /> <!-- Border color -->
            <corners android:radius="@dimen/_5sdp" /> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape>
            <solid android:color="#E8E3E3" /> <!-- Background color when focused -->
            <stroke android:width="1dp" android:color="#FF9800" /> <!-- Border color when focused -->
            <corners android:radius="@dimen/_5sdp" /> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#FFFF" /> <!-- Background color when disabled -->
            <stroke android:width="1dp" android:color="#000" /> <!-- Border color when disabled -->
            <corners android:radius="@dimen/_5sdp" /> <!-- Corner radius -->
        </shape>
    </item>
</selector>
