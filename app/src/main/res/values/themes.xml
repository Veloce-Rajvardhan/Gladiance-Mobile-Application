<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/otp_edittext_background</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/custom_seekbar_progress_black</item>
        <item name="android:thumb">@drawable/custom_seekbar_thumb_black</item>
    </style>

    <style name="CustomSeekBarRGBHue" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/rgb_hue_custom_progress_bar</item>
        <item name="android:thumb">@drawable/custom_seekbar_thumb_black</item>
    </style>




    <!-- LIGHT THEME CODE-->

    <!--    Screen Background theme color-->
    <style name="SCREEN">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT" parent="Theme.AppCompat">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!-- Button and card view and all small small background Theme -->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/main_dark_background</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!-- Grid Backgraund Theme -->
    <style name="MyGridStyle">
        <item name="android:background">@drawable/main_dark_background</item>
        <item name="android:textColor">@color/color_black</item>
    </style>


    <!-- EditText Theme -->
    <style name="MyEditTextStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_edittext_background_light</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Top Button Theme -->
    <style name="TopButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/top_button_background_light</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!-- Top Switch Theme -->
    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>
    </style>

    <!-- Top Feedback Ring Theme -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_black</item>
        <item name="colorControlActivated">@color/color_orange</item>
    </style>

    <!--  Transperant Bg Theme -->
    <style name="TransperantBg">
        <item name="android:background">@drawable/transparent_bg_black</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!--  Transperant Bg Theme -->
    <style name="TransperantButtonStyle">
        <item name="android:background">@drawable/transparent_backgraund</item>
        <item name="android:textColor">@color/color_black</item>
    </style>


    <!--  Dropdown Theme -->
    <style name="MyDropdownStyle">
        <item name="android:background">@drawable/dropdown_backgraund</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!--  Switch Theme -->
    <style name="MySpinnerStyle">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <!--  Switch Theme -->

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <!-- White Button Theme -->
    <style name="WhiteButtonStyle" >
        <item name="android:background">@drawable/black_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Grey Button Theme -->
    <style name="GreyLightButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/grey_light_button</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!-- Circular Progress Bar Theme -->
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
    </style>

    <!-- Grey Button Left Corner Theme -->
    <style name="GreyLightButtonLeftCorner" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/grey_light_button_left</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
    <!-- Grey Button Right Corner Theme -->
    <style name="GreyLightButtonRightCorner" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/grey_light_button_right</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!--Button Theme -->
    <style name="ButtonStyleLeftCorners" >
        <item name="android:background">@drawable/black_button_background_left</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyleRightCorners" >
        <item name="android:background">@drawable/black_button_background_right</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!--  MeowBottomNavigation Theme -->
    <style name="MeowBottomNavigation">
        <item name="mbn_backgroundBottomColor">#ffffff</item>
        <item name="mbn_circleColor">#000000</item>
        <item name="mbn_countBackgroundColor">#ff6f00</item>
        <item name="mbn_countTextColor">#ffffff</item>
        <item name="mbn_defaultIconColor">#000000</item>
        <item name="mbn_rippleColor">#000000</item>
        <item name="mbn_selectedIconColor">#ffffff</item>
        <item name="mbn_shadowColor">#000000</item>

    </style>

