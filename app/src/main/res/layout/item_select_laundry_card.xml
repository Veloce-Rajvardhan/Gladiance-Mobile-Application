<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/llItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_sr_no"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center|left"
                android:textSize="@dimen/_14sdp"
                style="@style/TEXT" />

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Amt"
                android:gravity="center|left"
                android:paddingStart="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_14sdp"
                style="@style/TEXT" />

            <TextView
                android:id="@+id/tv_item_remove"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:gravity="center|right"
                android:paddingStart="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_14sdp"
                style="@style/TEXT" />

        </LinearLayout>

            <LinearLayout
                android:id="@+id/llItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp">

                <RadioButton
                    android:id="@+id/checkBox"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center|left"
                    android:textSize="@dimen/_14sdp"
                    style="@style/TEXT" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:text="Drywash"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    style="@style/TEXT" />

                <TextView
                    android:id="@+id/tv_amount_drywash"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:text="R 300"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    style="@style/TEXT" />
                <TextView
                    android:id="@+id/tv_request_no"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    style="@style/TEXT" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@drawable/common_text_bg">

                    <ImageView
                        android:id="@+id/decrementButton"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:onClick="decrement"
                        android:textColor="@color/white"
                        android:src="@drawable/decrement"
                        android:layout_marginBottom="10dp"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/scoreText"
                        android:layout_width="43dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/incrementButton"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:src="@drawable/increment"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp">

                <RadioButton
                    android:id="@+id/checkBoxPress"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center|left"
                    android:textSize="@dimen/_14sdp"
                    style="@style/TEXT" />

                <TextView
                    android:id="@+id/tv_name_press"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:text="Press"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    style="@style/TEXT" />

                <TextView
                    android:id="@+id/tv_amount_press"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:text="R 300"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    style="@style/TEXT" />
                <TextView
                    android:id="@+id/tv_request_no_press"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    style="@style/TEXT" />

                <LinearLayout
                    android:id="@+id/linearLayoutPress"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@drawable/common_text_bg">

                    <ImageView
                        android:id="@+id/decrementButtonPress"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:onClick="decrement"
                        android:textColor="@color/white"
                        android:src="@drawable/decrement"
                        android:layout_marginBottom="10dp"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/scoreTextPress"
                        android:layout_width="43dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/incrementButtonPress"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:onClick="decrement"
                        android:textColor="@color/white"
                        android:src="@drawable/increment"/>


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
