<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.DeviceControls.AirConditionerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Air Conditioning"
        style="@style/TEXT"
        android:textSize="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/DeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Text"
        style="@style/TEXT"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <Switch
        android:id="@+id/switchButtonAirCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="false"
        android:showText="true"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="25dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:theme="@style/Theme.AppCompat.Light"
        android:thumb="@drawable/switch_thumb2"
        android:track="@drawable/switch_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeviceName"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/tvAmbientTemperature"
        style="@style/TEXT"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Ambient Temperature"
        android:textSize="18dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchButtonAirCon"
        />

    <TextView
        android:id="@+id/textViewTemperature"
        style="@style/TEXT"
        android:layout_width="123dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Temperature"
        android:textSize="18dp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAmbientTemperature"
        />

    <com.gladiance.ui.activities.DeviceControls.CircularSeekBar
        android:id="@+id/circularSeekBar"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemperature" />

    <TextView
        android:id="@+id/textViewFanSpeed"
        android:layout_width="123dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Fan Speed"
        style="@style/TEXT"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circularSeekBar"/>

    <SeekBar
        android:id="@+id/seekBarAirCond"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:max="3"
        android:progress="0"
        android:splitTrack="false"
        android:padding="16dp"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFanSpeed"
        app:layout_constraintVertical_bias="0.587" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Off"
        android:layout_marginTop="2dp"
        style="@style/TEXT"
        app:layout_constraintTop_toBottomOf="@+id/seekBarAirCond"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Low"
        style="@style/TEXT"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/seekBarAirCond" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Medium"
        style="@style/TEXT"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/seekBarAirCond"

        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="High"
        style="@style/TEXT"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/seekBarAirCond" />


    <!--    <TextView-->
    <!--        android:id="@+id/progressTextView"-->
    <!--        style="@style/TEXT"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:textSize="27dp"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.099"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintVertical_bias="0.482" />-->

    <TextView
        android:id="@+id/textViewFan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="@color/color_text"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.107" />

    <LinearLayout
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical"
        android:weightSum="2"
        style="@style/TransperantBg"
        android:layout_marginTop="@dimen/_200sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/imgCool"
            android:src="@drawable/cool"
            android:padding="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:id="@+id/imgHot"
            android:src="@drawable/hot"
            android:padding="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>


    <LinearLayout
        style="@style/TransperantBg"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_200sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/TEXT"
            android:text="°C"
            android:padding="@dimen/_1sdp"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/tvFer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/TEXT"
            android:text="°F"
            android:padding="@dimen/_1sdp"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>