<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/SCREEN"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/node_cardView"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:layout_weight="1"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"> <!-- Replace with your image resource -->

        <LinearLayout
            android:id="@+id/llSpaceGroupName"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#222222"
            android:orientation="vertical">
            <!-- Image in CardView -->
            <ImageView
                android:id="@+id/imgSN"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:src="@drawable/homeproject"
                />

            <TextView
                android:id="@+id/projectSpaceGroupList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                style="@style/TEXT"
                android:textStyle="bold"
                android:text="Smart Button"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>