<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragment.DeviceControls.AirContiningFragment">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Air Conditioning"
                    style="@style/TEXT"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <Switch
                    android:id="@+id/switchButtonAirCon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    android:showText="true"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:textSize="25dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:theme="@style/Theme.AppCompat.Light"
                    android:thumb="@drawable/switch_thumb2"
                    android:track="@drawable/switch_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"/>

                <TextView
                    android:id="@+id/textViewTemperature"
                    style="@style/TEXT"
                    android:layout_width="123dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Temperature"
                    android:textSize="18dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switchButtonAirCon"
                     />

                <TextView
                    android:id="@+id/textViewFanSpeed"
                    android:layout_width="123dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Fan Speed"
                    style="@style/TEXT"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar" />

                <SeekBar
                    android:id="@+id/seekBarAirCond"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:max="3"
                    android:progress="0"
                    android:splitTrack="false"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFanSpeed" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Off"
                    android:layout_marginTop="2dp"
                    style="@style/TEXT"
                    app:layout_constraintTop_toBottomOf="@+id/seekBarAirCond"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Low"
                    style="@style/TEXT"
                    app:layout_constraintLeft_toRightOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/seekBarAirCond" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Medium"
                    style="@style/TEXT"
                    app:layout_constraintLeft_toRightOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/seekBarAirCond"

                    />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="High"
                    style="@style/TEXT"
                    app:layout_constraintLeft_toRightOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/seekBarAirCond" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:indeterminate="false"
                    android:max="86"
                    android:min="64"
                    android:progress="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTemperature"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/incrementButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progressBar"
                    android:text="+"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.585"
                    app:layout_constraintStart_toEndOf="@+id/progressBar"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/decrementButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progressBar"
                    android:layout_toEndOf="@id/incrementButton"
                    android:text="-"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/progressBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/progressTextView"
                    style="@style/TEXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/incrementButton"
                    android:textSize="27dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.483" />

                <TextView
                    android:id="@+id/textViewFan"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    style="@style/TEXT"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:layout_constraintVertical_bias="0.107" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonCool"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Cool"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintVertical_bias="0.439" />

                <TextView
                    android:id="@+id/textMode"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="120dp"
                    android:gravity="center"
                    android:text=""
                    style="@style/TEXT"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/buttonHeat"
                    app:layout_constraintHorizontal_bias="0.385"
                    app:layout_constraintStart_toEndOf="@+id/buttonCool" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonHeat"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="36dp"
                    android:text="Heat"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintVertical_bias="0.439" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonCCent"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="40dp"
                    android:text="Centigrade"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textUnit"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="44dp"
                    android:gravity="center"
                    android:text=""
                    style="@style/TEXT"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/buttonHeat"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toEndOf="@+id/buttonCool" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonFehr"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="36dp"
                    android:text="Fahrenheit"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>