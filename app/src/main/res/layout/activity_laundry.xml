<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ControlBouquet.LaundryActivity">

    <TextView
        android:id="@+id/title"
        style="@style/TEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Laundry"
        android:gravity="center"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textviewLaundry"
        style="@style/TEXT"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Select laundry pickup duration"
        android:textSize="20dp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewLaundry"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textviewTime1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text=" 9:00 pm "
            style="@style/TransperantBg"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text=" - "
            style="@style/TEXT"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textviewTime2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text=" 10:00 am "
            style="@style/TransperantBg"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textviewLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="---------------------------------------------"
        style="@style/TEXT"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textviewSelectItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center|left"
        android:paddingStart="@dimen/_20sdp"
        android:text="Select Item"
        style="@style/TEXT"
        android:textSize="@dimen/_17sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewLine" />




    <TextView
        android:id="@+id/textviewLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_170sdp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="---------------------------------------------"
        android:textColor="#cccc"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textviewSelectItem"
        />

    <TextView
        android:id="@+id/tv_grand_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Grand Total"
        style="@style/TEXT"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewLine2" />


    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="7000"
        style="@style/TEXT"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintTop_toBottomOf="@+id/textviewLine2" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/orange_button_background"
        android:fontFamily="@font/roboto_medium"
        android:text="Send Request"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAmount" />

</androidx.constraintlayout.widget.ConstraintLayout>