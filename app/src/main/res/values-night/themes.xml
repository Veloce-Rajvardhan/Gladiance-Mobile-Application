<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/grey</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>

        <item name="android:textColorPrimary">@color/white</item>
    </style>



    DARK THEME CODE

    <!--    Screen Background theme color-->
    <style name="SCREEN">
        <item name="android:background">#000000</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Button and card view and all small small background Theme -->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/main_light_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Grid Backgraund Theme -->
    <style name="MyGridStyle">
        <item name="android:background">@drawable/main_light_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- EditText Theme -->
    <style name="MyEditTextStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_edittext_background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Top Button Theme -->
    <style name="TopButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/top_button_background_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_dark</item>
        <item name="android:track">@drawable/switch_background_dark</item>
    </style>

    <!-- Top Feedback Ring Theme -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/color_orange</item>
    </style>


    <!--  Dropdown Theme -->
    <style name="MyDropdownStyle">
        <item name="android:background">@drawable/dropdown_backgraund_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Button Theme -->
    <style name="WhiteButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/white_button_bg</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!-- Grey Button Theme -->
    <style name="GreyLightButtonStyle" parent="Widget.AppCompat.Button">
